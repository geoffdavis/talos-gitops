{
  "mcpServers": {
    "git": {
      "command": "uvx",
      "args": [
        "mcp-server-git",
        "--repository",
        "/Users/geoff/src/personal/talos-gitops"
      ]
    },
    "cloudflare": {
      "command": "npx",
      "args": [
        "mcp-remote",
        "https://observability.mcp.cloudflare.com/sse"
      ]
    },
    "kubernetes": {
      "command": "npx",
      "args": [
        "mcp-server-kubernetes"
      ],
      "alwaysAllow": [
        "",
        "kubectl_get",
        "kubectl_describe",
        "kubectl_logs"
      ]
    },
    "flux-operator": {
      "command": "/opt/homebrew/bin/flux-operator-mcp",
      "args": [
        "serve"
      ],
      "env": {
        "KUBECONFIG": "/Users/geoff/.kube/config"
      },
      "alwaysAllow": [
        "get_kubernetes_resources",
        "suspend_flux_kustomization",
        "resume_flux_kustomization",
        "reconcile_flux_source",
        "reconcile_flux_helmrelease"
      ]
    }
  }
}